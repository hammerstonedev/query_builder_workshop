<%= form_with model: contact, url: (contact.persisted? ? [:account, contact] : [:account, @team, :contacts]), local: true, class: 'form' do |form| %>
  <%= render 'account/shared/forms/errors', form: form %>

  <% with_field_settings form: form do %>
    <%= render 'shared/fields/text_field', method: :email, options: {autofocus: true} %>
    <%= render 'shared/fields/text_field', method: :first_name %>
    <%= render 'shared/fields/text_field', method: :last_name %>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
  <% end %>

  <div class="buttons">
    <%= form.submit (form.object.persisted? ? t('.buttons.update') : t('.buttons.create')), class: "button" %>
    <% if form.object.persisted? %>
    <%= link_to t('global.buttons.cancel'), [:account, contact], class: "button-secondary" %>
    <% else %>
    <%= link_to t('global.buttons.cancel'), [:account, @team, :contacts], class: "button-secondary" %>
    <% end %>
  </div>

<% end %>
